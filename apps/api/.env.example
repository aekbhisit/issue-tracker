# API Environment Variables Example
# Copy this file to .env.local for local development

# Server Configuration
NODE_ENV=development
API_PORT=3000
API_HOST=localhost

# Database Configuration (using local PostgreSQL instance)
# Update DATABASE_URL with your local PostgreSQL credentials
DATABASE_TYPE=postgresql
DATABASE_URL=postgresql://postgres:password@localhost:5432/nd_issue_tracker

# Redis Configuration (using local Redis instance)
REDIS_URL=redis://localhost:6379

# Security
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=10

# CORS (local development)
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:3002

# Storage Configuration (local development)
STORAGE_TYPE=local
STORAGE_PATH=./storage/uploads
STORAGE_PUBLIC_PATH=./storage/public
STORAGE_TEMP_PATH=./storage/uploads/temp
LOCAL_STORAGE_BASE_URL=http://localhost:3000/uploads

# Upload Limits
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp
ALLOWED_DOCUMENT_TYPES=pdf,doc,docx

# Cleanup
TEMP_FILE_CLEANUP_HOURS=24
