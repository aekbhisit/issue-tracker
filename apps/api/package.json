{
  "name": "api",
  "version": "1.0.0",
  "private": true,
  "description": "Express API Server",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon",
    "dev:tsx": "tsx watch --clear-screen=false src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@prisma/client": "^6.17.1",
