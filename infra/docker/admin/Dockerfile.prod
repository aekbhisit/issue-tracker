# Production Dockerfile for Admin
FROM node:18-alpine AS base

# Install curl for health checks
RUN apk add --no-cache curl

WORKDIR /app

# Install pnpm
RUN npm install -g pnpm

# ===========================================
# Dependencies Stage
# ===========================================
FROM base AS dependencies

# Copy workspace configuration files
COPY package.json pnpm-workspace.yaml pnpm-lock.yaml* ./

# Copy all packages (shared dependencies)
COPY packages ./packages

# Create apps directory structure FIRST (so pnpm recognizes it as workspace)
# Then copy Admin app package.json
RUN mkdir -p apps/admin
COPY apps/admin/package.json ./apps/admin/

# Install production dependencies for admin app and workspace packages
# CRITICAL: Use --filter to explicitly install admin app dependencies (Next.js, React, etc.)
# Without --filter, pnpm might only install root dependencies, not workspace app dependencies
# This matches the pattern used in API Dockerfile which works correctly
# Use BuildKit cache mount for pnpm store (speeds up subsequent builds)
RUN --mount=type=cache,target=/root/.local/share/pnpm/store \
    echo "ðŸ“¦ Installing production dependencies for admin and workspace packages..." && \
    echo "ðŸ“ Workspace structure:" && \
    ls -la apps/ && \
    ls -la apps/admin/ && \
    pnpm install --frozen-lockfile --prod --filter "admin" --filter "@workspace/*" && \
    echo "âœ… Dependencies installed" && \
    echo "ðŸ” Verifying Next.js is installed..." && \
    (test -d /app/node_modules/next && echo "âœ… Next.js found in root node_modules" || echo "âš ï¸ Next.js not in root") && \
    (test -d /app/apps/admin/node_modules/next && echo "âœ… Next.js found in admin node_modules" || echo "âš ï¸ Next.js not in admin") && \
    (test -d /app/node_modules/next || test -d /app/apps/admin/node_modules/next) && echo "âœ… Next.js verified" || (echo "âŒ Next.js not found anywhere!" && echo "ðŸ“ Root node_modules contents:" && ls -la /app/node_modules 2>&1 | head -20 && echo "ðŸ“ Admin node_modules:" && ls -la /app/apps/admin/node_modules 2>&1 | head -20 && find /app -name "next" -type d 2>/dev/null | head -10 && exit 1)

# ===========================================
# Build Stage
# ===========================================
FROM base AS build

# Build arguments for Next.js (NEXT_PUBLIC_* variables must be set at build time)
# These are passed from Jenkinsfile or docker build command
ARG NEXT_PUBLIC_ADMIN_API_URL=
ARG NEXT_PUBLIC_ADMIN_AI_CHATBOT_ENABLED=true
ARG NEXT_PUBLIC_ADMIN_ASSET_PREFIX=/admin
ARG NEXT_PUBLIC_ADMIN_BASE_PATH=/admin
ARG NEXT_TELEMETRY_DISABLED=1

# Set as environment variables for Next.js build
ENV NEXT_PUBLIC_ADMIN_API_URL=${NEXT_PUBLIC_ADMIN_API_URL}
ENV NEXT_PUBLIC_ADMIN_AI_CHATBOT_ENABLED=${NEXT_PUBLIC_ADMIN_AI_CHATBOT_ENABLED}
ENV NEXT_PUBLIC_ADMIN_ASSET_PREFIX=${NEXT_PUBLIC_ADMIN_ASSET_PREFIX}
ENV NEXT_PUBLIC_ADMIN_BASE_PATH=${NEXT_PUBLIC_ADMIN_BASE_PATH}
ENV NEXT_TELEMETRY_DISABLED=${NEXT_TELEMETRY_DISABLED}

# Copy workspace configuration files
COPY package.json pnpm-workspace.yaml pnpm-lock.yaml* ./

# Copy all packages
COPY packages ./packages

# Copy Admin app (includes existing collector.min.js in public folder)
COPY apps/admin ./apps/admin

# Copy Collector SDK if it exists in build context
# Note: If collector-sdk is not available, the build will use existing collector.min.js
# Build must be run from repo root: docker build -f infra/docker/admin/Dockerfile.prod .
COPY apps/collector-sdk ./apps/collector-sdk

# Install all dependencies (including dev dependencies for build)
# Use BuildKit cache mount for pnpm store (speeds up subsequent builds)
RUN --mount=type=cache,target=/root/.local/share/pnpm/store \
    pnpm install --frozen-lockfile

# Build shared workspace packages needed by Admin (CommonJS dist for Node/Next resolution)
# Use subshells to isolate directory changes and ensure we're back at /app after each build
WORKDIR /app
RUN echo "ðŸ”¨ Building workspace packages..." && \
    (cd /app/packages/types && \
     echo "ðŸ“ Building @workspace/types from $(pwd)..." && \
     npx tsc --project tsconfig.json && \
     echo "ðŸ“ Types build complete, checking dist:" && \
     test -d dist && ls -la dist/ | head -5 || (echo "âŒ dist not found in packages/types" && ls -la . && exit 1)) && \
    (cd /app/packages/utils && \
     echo "ðŸ“ Building @workspace/utils from $(pwd)..." && \
     npx tsc --project tsconfig.json && \
     echo "ðŸ“ Utils build complete, checking dist:" && \
     test -d dist && ls -la dist/ | head -5 || (echo "âŒ dist not found in packages/utils" && ls -la . && exit 1)) && \
    echo "âœ… Workspace packages built" && \
    echo "ðŸ“ Verifying dist folders from /app..." && \
    test -d /app/packages/types/dist || (echo "âŒ /app/packages/types/dist not found" && find /app -name "dist" -type d 2>/dev/null | head -10 && exit 1) && \
    test -d /app/packages/utils/dist || (echo "âŒ /app/packages/utils/dist not found" && find /app -name "dist" -type d 2>/dev/null | head -10 && exit 1) && \
    echo "âœ… Dist folders verified: packages/types/dist and packages/utils/dist exist"

# Build Collector SDK if it exists, otherwise use existing collector.min.js
# Check if collector-sdk exists and has package.json before building
RUN if [ -f /app/apps/collector-sdk/package.json ]; then \
        echo "ðŸ“¦ Building Collector SDK..." && \
        cd /app/apps/collector-sdk && \
        pnpm build && \
        echo "âœ… Collector SDK built" && \
        mkdir -p /app/apps/admin/public && \
        cp /app/apps/collector-sdk/dist/collector.min.js /app/apps/admin/public/collector.min.js && \
        echo "âœ… Copied collector.min.js to admin/public"; \
    else \
        echo "âš ï¸ Collector SDK not found, checking for existing collector.min.js..." && \
        if [ -f /app/apps/admin/public/collector.min.js ]; then \
            echo "âœ… Using existing collector.min.js"; \
        else \
            echo "âŒ No collector.min.js found! Creating empty file..." && \
            mkdir -p /app/apps/admin/public && \
            touch /app/apps/admin/public/collector.min.js; \
        fi; \
    fi

# Build Admin
# Build-time environment variables are already set above (from ARG/ENV)
WORKDIR /app/apps/admin

# Build with explicit error handling
# Use BuildKit cache mount for Next.js build cache (speeds up subsequent builds)
# Note: We use 'set -uxo pipefail' (without -e) to allow error handling to run
# This ensures we can capture and display build errors properly
RUN --mount=type=cache,target=/app/apps/admin/.next/cache \
    set -uxo pipefail && \
    echo "ðŸ”¨ Building Admin app..." && \
    echo "ðŸ“‹ Build environment:" && \
    echo "  NEXT_PUBLIC_ADMIN_BASE_PATH=${NEXT_PUBLIC_ADMIN_BASE_PATH}" && \
    echo "  NEXT_PUBLIC_ADMIN_ASSET_PREFIX=${NEXT_PUBLIC_ADMIN_ASSET_PREFIX}" && \
    echo "  Working directory: $(pwd)" && \
    echo "  Contents before build:" && \
    ls -la . | head -10 && \
    echo "" && \
    echo "ðŸ“‹ Checking dependencies before build..." && \
    (test -d /app/packages/types/dist && echo "âœ… @workspace/types built" || (echo "âŒ @workspace/types not built" && exit 1)) && \
    (test -d /app/packages/utils/dist && echo "âœ… @workspace/utils built" || (echo "âŒ @workspace/utils not built" && exit 1)) && \
    (test -f /app/apps/admin/public/collector.min.js && echo "âœ… collector.min.js exists" || echo "âš ï¸ collector.min.js not found (will create empty)") && \
    echo "" && \
    echo "ðŸš€ Running: pnpm build" && \
    mkdir -p /tmp && \
    touch /tmp/build.log && \
    pnpm build 2>&1 | tee /tmp/build.log; BUILD_STATUS=${PIPESTATUS[0]} && \
    if [ $BUILD_STATUS -ne 0 ]; then \
        echo "" && \
        echo "âŒ BUILD FAILED! (Exit code: $BUILD_STATUS)" && \
        echo "" && \
        echo "ðŸ“‹ Full Build Error Output:" && \
        echo "==========================================" && \
        cat /tmp/build.log && \
        echo "==========================================" && \
        echo "" && \
        echo "ðŸ” Diagnostic Information:" && \
        echo "  Current directory: $(pwd)" && \
        echo "  Checking for .next directory:" && \
        (ls -la .next 2>&1 || echo "    âŒ No .next directory found") && \
        echo "  Checking node_modules:" && \
        (test -d node_modules && echo "    âœ… node_modules exists" || echo "    âŒ node_modules missing") && \
        (test -d /app/node_modules && echo "    âœ… root node_modules exists" || echo "    âŒ root node_modules missing") && \
        echo "  Checking workspace packages:" && \
        (test -d /app/packages/types/dist && echo "    âœ… @workspace/types/dist exists" || echo "    âŒ @workspace/types/dist missing") && \
        (test -d /app/packages/utils/dist && echo "    âœ… @workspace/utils/dist exists" || echo "    âŒ @workspace/utils/dist missing") && \
        echo "  Checking Next.js:" && \
        (test -d /app/node_modules/next && echo "    âœ… Next.js in root node_modules" || echo "    âš ï¸ Next.js not in root node_modules") && \
        (test -d /app/apps/admin/node_modules/next && echo "    âœ… Next.js in admin node_modules" || echo "    âš ï¸ Next.js not in admin node_modules") && \
        echo "" && \
        echo "ðŸ’¡ Tip: Check the build log above for TypeScript errors, missing imports, or syntax errors." && \
        exit $BUILD_STATUS; \
    fi && \
    echo "" && \
    echo "ðŸ” Verifying .next directory was created..." && \
    if [ ! -d /app/apps/admin/.next ]; then \
        echo "âŒ ERROR: .next directory NOT found after build!" && \
        echo "Current directory: $(pwd)" && \
        echo "Contents of /app/apps/admin:" && \
        ls -la /app/apps/admin/ && \
        echo "Searching for .next:" && \
        find /app -name ".next" -type d 2>/dev/null || echo "No .next found anywhere" && \
        exit 1; \
    fi && \
    echo "âœ… .next directory exists" && \
    echo "ðŸ“ Contents of .next:" && \
    ls -la /app/apps/admin/.next | head -20 && \
    if [ ! -d /app/apps/admin/.next/static ]; then \
        echo "âš ï¸ WARNING: .next/static directory NOT found!" && \
        echo "This might cause 404 errors for static assets" && \
        ls -la /app/apps/admin/.next/ | head -20; \
    else \
        echo "âœ… .next/static directory exists" && \
        echo "ðŸ“ Static assets:" && \
        ls -la /app/apps/admin/.next/static | head -10; \
    fi && \
    echo "âœ… Build completed successfully"

# ===========================================
# Production Stage
# ===========================================
FROM base AS production

# Copy production dependencies from dependencies stage
# The dependencies stage already installed production deps correctly with pnpm
# This contains the pnpm store in .pnpm plus any root-level deps
COPY --from=dependencies /app/node_modules ./node_modules
COPY --from=dependencies /app/packages ./packages

# Copy workspace configuration files (needed for module resolution)
COPY --from=build /app/package.json ./package.json
COPY --from=build /app/pnpm-workspace.yaml ./pnpm-workspace.yaml

# Create apps/admin directory structure (needed before copying app node_modules or .next)
RUN mkdir -p apps/admin

# Copy app-specific node_modules for admin (where Next.js, React, etc. live)
COPY --from=dependencies /app/apps/admin/node_modules ./apps/admin/node_modules

# Copy compiled workspace package dist folders (needed at runtime)
COPY --from=build /app/packages/types/dist ./packages/types/dist
COPY --from=build /app/packages/utils/dist ./packages/utils/dist

# Copy built application to correct location
# CRITICAL: These COPY commands will FAIL if .next doesn't exist in build stage
# This is intentional - we want the build to fail loudly if .next wasn't created
RUN echo "ðŸ“‹ About to copy .next from build stage..." && \
    echo "Verifying source exists in build stage..." && \
    ls -la /app/apps/admin/.next 2>&1 || echo "âš ï¸ Note: This is expected to fail here (we're in production stage)"

COPY --from=build /app/apps/admin/.next ./apps/admin/.next
COPY --from=build /app/apps/admin/public ./apps/admin/public

# Verify .next directory was copied successfully
# This is a CRITICAL check - if this fails, the image is broken
RUN set -euxo pipefail && \
    echo "ðŸ” Verifying .next directory was copied to production stage..." && \
    if [ ! -d /app/apps/admin/.next ]; then \
        echo "âŒ CRITICAL ERROR: .next directory NOT found in production stage!" && \
        echo "This means the COPY command failed or .next wasn't in the build stage" && \
        echo "Contents of /app/apps/admin:" && \
        ls -la /app/apps/admin/ && \
        echo "Searching for .next:" && \
        find /app -name ".next" -type d 2>/dev/null || echo "No .next found anywhere" && \
        exit 1; \
    fi && \
    echo "âœ… .next directory exists in production stage" && \
    echo "ðŸ“ Contents of .next:" && \
    ls -la /app/apps/admin/.next | head -20 && \
    if [ ! -d /app/apps/admin/.next/static ]; then \
        echo "âŒ CRITICAL ERROR: .next/static directory NOT found!" && \
        echo "Static assets will return 404 errors!" && \
        echo "Contents of .next:" && \
        ls -la /app/apps/admin/.next/ && \
        exit 1; \
    else \
        echo "âœ… .next/static directory exists" && \
        echo "ðŸ“ Static assets structure:" && \
        ls -la /app/apps/admin/.next/static | head -10 && \
        echo "âœ… All build artifacts verified successfully"; \
    fi

# Verify Next.js and React are available in admin node_modules (primary location)
RUN echo "ðŸ” Verifying runtime dependencies (admin node_modules)..." && \
    ls -la /app/apps/admin/node_modules 2>&1 | head -30 && \
    test -d /app/apps/admin/node_modules/next && echo "âœ… Next.js found in /app/apps/admin/node_modules" || (echo "âŒ Next.js NOT found in /app/apps/admin/node_modules" && exit 1) && \
    test -d /app/apps/admin/node_modules/react && echo "âœ… React found in /app/apps/admin/node_modules" || (echo "âŒ React NOT found in /app/apps/admin/node_modules" && exit 1) && \
    (test -f /app/apps/admin/node_modules/next/dist/bin/next || test -L /app/apps/admin/node_modules/.bin/next || test -f /app/apps/admin/node_modules/.bin/next) && echo "âœ… Next.js binary found for admin" || (echo "âŒ Next.js binary NOT found for admin" && ls -la /app/apps/admin/node_modules/.bin 2>&1 | head -20 && ls -la /app/apps/admin/node_modules/next/dist/bin 2>&1 | head -20 && exit 1) && \
    echo "âœ… All runtime dependencies verified"

# Set working directory to Admin
WORKDIR /app/apps/admin

# Create non-root user
RUN addgroup -g 1001 -S nodejs
RUN adduser -S nodejs -u 1001
USER nodejs

# Expose port
EXPOSE 3411

# Start production server
# Use node to run Next.js CLI directly from admin's node_modules
# Set NODE_PATH so Node can resolve both root and admin-level deps
ENV NODE_PATH=/app/node_modules:/app/apps/admin/node_modules
CMD ["sh", "-c", "cd /app/apps/admin && exec node node_modules/next/dist/bin/next start -p ${PORT:-3411}"]
