# Production Dockerfile for Admin
FROM node:18-alpine AS base

# Install curl for health checks
RUN apk add --no-cache curl

WORKDIR /app

# Install pnpm
RUN npm install -g pnpm

# ===========================================
# Dependencies Stage
# ===========================================
FROM base AS dependencies

# Copy workspace configuration files
COPY package.json pnpm-workspace.yaml pnpm-lock.yaml* ./

# Copy all packages (shared dependencies)
COPY packages ./packages

# Create apps directory structure FIRST (so pnpm recognizes it as workspace)
# Then copy Admin app package.json
RUN mkdir -p apps/admin
COPY apps/admin/package.json ./apps/admin/

# Install production dependencies for admin app and workspace packages
# CRITICAL: Use --filter to explicitly install admin app dependencies (Next.js, React, etc.)
# Without --filter, pnpm might only install root dependencies, not workspace app dependencies
# This matches the pattern used in API Dockerfile which works correctly
RUN echo "ðŸ“¦ Installing production dependencies for admin and workspace packages..." && \
    echo "ðŸ“ Workspace structure:" && \
    ls -la apps/ && \
    ls -la apps/admin/ && \
    pnpm install --frozen-lockfile --prod --filter "admin" --filter "@workspace/*" && \
    echo "âœ… Dependencies installed" && \
    echo "ðŸ” Verifying Next.js is installed..." && \
    (test -d /app/node_modules/next && echo "âœ… Next.js found in root node_modules" || echo "âš ï¸ Next.js not in root") && \
    (test -d /app/apps/admin/node_modules/next && echo "âœ… Next.js found in admin node_modules" || echo "âš ï¸ Next.js not in admin") && \
    (test -d /app/node_modules/next || test -d /app/apps/admin/node_modules/next) && echo "âœ… Next.js verified" || (echo "âŒ Next.js not found anywhere!" && echo "ðŸ“ Root node_modules contents:" && ls -la /app/node_modules 2>&1 | head -20 && echo "ðŸ“ Admin node_modules:" && ls -la /app/apps/admin/node_modules 2>&1 | head -20 && find /app -name "next" -type d 2>/dev/null | head -10 && exit 1)

# ===========================================
# Build Stage
# ===========================================
FROM base AS build

# Copy workspace configuration files
COPY package.json pnpm-workspace.yaml pnpm-lock.yaml* ./

# Copy all packages
COPY packages ./packages

# Copy Admin app
COPY apps/admin ./apps/admin

# Copy Collector SDK (used to generate collector.min.js for Admin)
COPY apps/collector-sdk ./apps/collector-sdk

# Install all dependencies (including dev dependencies for build)
RUN pnpm install --frozen-lockfile

# Build shared workspace packages needed by Admin (CommonJS dist for Node/Next resolution)
# Use subshells to isolate directory changes and ensure we're back at /app after each build
WORKDIR /app
RUN echo "ðŸ”¨ Building workspace packages..." && \
    (cd /app/packages/types && \
     echo "ðŸ“ Building @workspace/types from $(pwd)..." && \
     npx tsc --project tsconfig.json && \
     echo "ðŸ“ Types build complete, checking dist:" && \
     test -d dist && ls -la dist/ | head -5 || (echo "âŒ dist not found in packages/types" && ls -la . && exit 1)) && \
    (cd /app/packages/utils && \
     echo "ðŸ“ Building @workspace/utils from $(pwd)..." && \
     npx tsc --project tsconfig.json && \
     echo "ðŸ“ Utils build complete, checking dist:" && \
     test -d dist && ls -la dist/ | head -5 || (echo "âŒ dist not found in packages/utils" && ls -la . && exit 1)) && \
    echo "âœ… Workspace packages built" && \
    echo "ðŸ“ Verifying dist folders from /app..." && \
    test -d /app/packages/types/dist || (echo "âŒ /app/packages/types/dist not found" && find /app -name "dist" -type d 2>/dev/null | head -10 && exit 1) && \
    test -d /app/packages/utils/dist || (echo "âŒ /app/packages/utils/dist not found" && find /app -name "dist" -type d 2>/dev/null | head -10 && exit 1) && \
    echo "âœ… Dist folders verified: packages/types/dist and packages/utils/dist exist"

# Build Collector SDK
WORKDIR /app/apps/collector-sdk
RUN pnpm build

# Copy Collector SDK bundle into Admin public folder before building
RUN mkdir -p /app/apps/admin/public && \
    cp /app/apps/collector-sdk/dist/collector.min.js /app/apps/admin/public/collector.min.js

# Build Admin
WORKDIR /app/apps/admin
RUN pnpm build

# ===========================================
# Production Stage
# ===========================================
FROM base AS production

# Copy production dependencies from dependencies stage
# The dependencies stage already installed production deps correctly with pnpm
# This is safer than copying from build stage (which has dev deps and broken symlinks)
# or reinstalling (which might have hoisting issues)
COPY --from=dependencies /app/node_modules ./node_modules
COPY --from=dependencies /app/packages ./packages

# Copy workspace configuration files (needed for module resolution)
COPY --from=build /app/package.json ./package.json
COPY --from=build /app/pnpm-workspace.yaml ./pnpm-workspace.yaml

# Create apps/admin directory structure (needed for app-specific node_modules if any)
RUN mkdir -p apps/admin

# Copy compiled workspace package dist folders (needed at runtime)
COPY --from=build /app/packages/types/dist ./packages/types/dist
COPY --from=build /app/packages/utils/dist ./packages/utils/dist

# Copy built application to correct location
COPY --from=build /app/apps/admin/.next ./apps/admin/.next
COPY --from=build /app/apps/admin/public ./apps/admin/public

# Verify Next.js and React are available (check both root and app-specific locations)
RUN echo "ðŸ” Verifying dependencies..." && \
    (test -d /app/node_modules/next || test -d /app/apps/admin/node_modules/next) && echo "âœ… Next.js found" || (echo "âŒ Next.js not found" && echo "ðŸ“ Checking root node_modules:" && ls -la /app/node_modules 2>&1 | head -20 && echo "ðŸ“ Checking admin node_modules:" && ls -la /app/apps/admin/node_modules 2>&1 | head -20 && exit 1) && \
    (test -d /app/node_modules/react || test -d /app/apps/admin/node_modules/react) && echo "âœ… React found" || (echo "âŒ React not found" && exit 1) && \
    (test -f /app/node_modules/next/dist/bin/next || test -f /app/apps/admin/node_modules/next/dist/bin/next || test -L /app/node_modules/.bin/next || test -f /app/node_modules/.bin/next || test -L /app/apps/admin/node_modules/.bin/next || test -f /app/apps/admin/node_modules/.bin/next) && echo "âœ… Next.js binary found" || (echo "âŒ Next.js binary not found" && echo "ðŸ“ Checking root .bin:" && ls -la /app/node_modules/.bin/ 2>&1 | head -10 && echo "ðŸ“ Checking admin .bin:" && ls -la /app/apps/admin/node_modules/.bin/ 2>&1 | head -10 && exit 1) && \
    echo "âœ… All dependencies verified"

# Set working directory to Admin
WORKDIR /app/apps/admin

# Create non-root user
RUN addgroup -g 1001 -S nodejs
RUN adduser -S nodejs -u 1001
USER nodejs

# Expose port
EXPOSE 3411

# Start production server
# Use node to run Next.js CLI directly (avoids npx/pnpm exec downloading deps)
# Set NODE_PATH to check both root and app-specific node_modules
ENV NODE_PATH=/app/node_modules:/app/apps/admin/node_modules
CMD ["sh", "-c", "cd /app/apps/admin && if [ -L /app/node_modules/.bin/next ] || [ -f /app/node_modules/.bin/next ]; then exec /app/node_modules/.bin/next start -p ${PORT:-3411}; elif [ -L /app/apps/admin/node_modules/.bin/next ] || [ -f /app/apps/admin/node_modules/.bin/next ]; then exec /app/apps/admin/node_modules/.bin/next start -p ${PORT:-3411}; elif [ -f /app/node_modules/next/dist/bin/next ]; then exec node /app/node_modules/next/dist/bin/next start -p ${PORT:-3411}; elif [ -f /app/apps/admin/node_modules/next/dist/bin/next ]; then exec node /app/apps/admin/node_modules/next/dist/bin/next start -p ${PORT:-3411}; else echo 'âŒ Next.js not found in any expected location' && find /app -name 'next' -type f -path '*/bin/next' 2>/dev/null | head -5 && exit 1; fi"]
