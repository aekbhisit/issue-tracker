# Production Dockerfile for API
FROM node:18-alpine AS base

# Install OpenSSL for Prisma and curl for health checks
RUN apk add --no-cache openssl libc6-compat curl

WORKDIR /app

# Install pnpm and prisma CLI (needed for Prisma client generation)
RUN npm install -g pnpm prisma@6.17.1

# ===========================================
# Dependencies Stage
# ===========================================
FROM base AS dependencies

# Copy workspace configuration files
COPY package.json pnpm-workspace.yaml pnpm-lock.yaml* ./

# Copy all packages (shared dependencies)
COPY packages ./packages
# Copy infra directory (contains database package)
COPY infra ./infra

# Create apps/api directory and copy package.json (needed for workspace dependency resolution)
# pnpm requires the directory structure to exist to recognize workspace packages
RUN mkdir -p apps/api
COPY apps/api/package.json ./apps/api/

# Install production dependencies for all workspace packages
# pnpm will install dependencies for all packages listed in pnpm-workspace.yaml
# Using --filter ensures API dependencies are installed
RUN echo "üì¶ Installing production dependencies..." && \
    pnpm install --frozen-lockfile --prod --filter "api" --filter "@workspace/*" && \
    echo "‚úÖ Dependencies installed"

# Generate Prisma client (needed at runtime)
# Prisma CLI is installed globally in base image
WORKDIR /app
ENV DATABASE_URL="postgresql://postgres:password@postgres:5432/mydb"
RUN cd infra/database && \
    node scripts/merge-schema.js && \
    prisma generate --schema=./prisma/schema.prisma

# ===========================================
# Build Stage
# ===========================================
FROM base AS build

# Copy workspace configuration files
COPY package.json pnpm-workspace.yaml pnpm-lock.yaml* ./

# Copy all packages (including infra/database which is part of workspace)
COPY packages ./packages
COPY infra ./infra

# Copy API app
COPY apps/api ./apps/api

# Install all dependencies (including dev dependencies for build)
RUN pnpm install --frozen-lockfile

# Generate Prisma client
WORKDIR /app
ENV DATABASE_URL="postgresql://postgres:password@postgres:5432/mydb"
# Merge schema files and generate Prisma client using global prisma CLI
RUN cd infra/database && \
    node scripts/merge-schema.js && \
    prisma generate --schema=./prisma/schema.prisma

# Verify Prisma client was generated
RUN test -d node_modules/.pnpm/@prisma+client* && echo "‚úÖ Prisma client generated" || echo "‚ö†Ô∏è  Prisma client location check skipped"

# Build shared workspace packages to emit CommonJS output for runtime
RUN pnpm --filter "@workspace/database" build && \
    pnpm --filter "@workspace/types" build && \
    pnpm --filter "@workspace/utils" build && \
    echo "üìÅ infra/database/dist contents:" && ls -la infra/database/dist | head -10 && \
    echo "üìÅ packages/types/dist contents:" && ls -la packages/types/dist | head -10 && \
    echo "üìÅ packages/utils/dist contents:" && ls -la packages/utils/dist | head -10

# Build API
WORKDIR /app/apps/api
# Verify source files exist before building
RUN echo "üîç Checking source files..." && \
    test -d src && echo "‚úÖ Source directory exists" || (echo "‚ùå Source directory missing" && exit 1) && \
    test -f src/index.ts && echo "‚úÖ Entry point exists" || (echo "‚ùå Entry point missing" && exit 1) && \
    echo "üìÅ Source files:" && ls -la src/ | head -10
# Run build - TypeScript should resolve @prisma/client through pnpm workspace
# Clean any previous build artifacts first
RUN rm -rf dist || true
# Use explicit tsc command with error checking - fail on any error
# Simple approach: redirect output to file, then check if command succeeded
RUN echo "üî® Building TypeScript..." && \
    pnpm build > /tmp/build.log 2>&1 && \
    echo "üìã Build log:" && cat /tmp/build.log && \
    echo "‚úÖ TypeScript build completed successfully" || \
    (echo "‚ùå TypeScript build failed!" && echo "üìã Build log:" && cat /tmp/build.log && exit 1)
# Verify build output was created and reorganize if needed
# TypeScript may output to dist/apps/api/src/ when rootDir is inferred from monorepo
RUN echo "üîç Verifying build output..." && \
    echo "üìÅ Checking dist structure..." && \
    find dist -name "index.js" -type f 2>/dev/null | head -5 || echo "No index.js found yet" && \
    if [ -f dist/apps/api/src/index.js ]; then \
      echo "üì¶ Reorganizing build output (monorepo structure: dist/apps/api/src/ -> dist/)..." && \
      mkdir -p dist.tmp && \
      cp -r dist/apps/api/src/* dist.tmp/ && \
      rm -rf dist && \
      mv dist.tmp dist && \
      echo "‚úÖ Reorganization complete"; \
    elif [ -d dist/src ] && [ -f dist/src/index.js ]; then \
      echo "üì¶ Reorganizing build output (src subdirectory: dist/src/ -> dist/)..." && \
      mkdir -p dist.tmp && \
      cp -r dist/src/* dist.tmp/ && \
      rm -rf dist && \
      mv dist.tmp dist && \
      echo "‚úÖ Reorganization complete"; \
    else \
      echo "‚ÑπÔ∏è  Using dist structure as-is"; \
    fi && \
    echo "üìÅ Final dist structure:" && \
    ls -la dist/ | head -10 && \
    test -d dist || (echo "‚ùå dist directory not found" && ls -la . && exit 1) && \
    test -f dist/index.js || (echo "‚ùå dist/index.js not found after reorganization" && echo "üìÅ dist contents:" && find dist -type f -name "*.js" | head -10 && exit 1) && \
    echo "‚úÖ Build output verified: dist/index.js exists"

# Copy plain JavaScript config files that are required at runtime but not emitted by TypeScript
RUN test -f src/shared/storage.config.js && \
    mkdir -p dist/shared && \
    cp src/shared/storage.config.js dist/shared/storage.config.js && \
    echo "‚úÖ Copied shared/storage.config.js into dist"

# ===========================================
# Production Stage
# ===========================================
FROM base AS production

# Copy production dependencies (includes generated Prisma client)
COPY --from=dependencies /app/node_modules ./node_modules
COPY --from=dependencies /app/packages ./packages
# Copy infra directory (needed for database package)
COPY --from=dependencies /app/infra ./infra
# Copy root package metadata (needed by runtime helpers that look for project root)
COPY --from=dependencies /app/package.json ./
# Overlay compiled database package output
COPY --from=build /app/infra/database/dist ./infra/database/dist
# Overlay compiled shared packages
COPY --from=build /app/packages/types/dist ./packages/types/dist
COPY --from=build /app/packages/utils/dist ./packages/utils/dist

# Copy built application
COPY --from=build /app/apps/api/dist ./apps/api/dist
COPY --from=build /app/apps/api/package.json ./apps/api/
# Copy app-specific node_modules with symlinks pointing to workspace store
COPY --from=dependencies /app/apps/api/node_modules ./apps/api/node_modules

# Set working directory to API
WORKDIR /app/apps/api

# Set NODE_PATH to allow Node.js to resolve modules from workspace root
# This is needed because pnpm hoists dependencies to /app/node_modules
# but we're running from /app/apps/api
# Include both root and app-specific node_modules in case pnpm doesn't hoist
ENV NODE_PATH=/app/node_modules:/app/apps/api/node_modules

# Verify node_modules and ensure dotenv can be resolved
# pnpm may keep dotenv inside the store without creating symlinks, so create them if needed
RUN <<'EOF'
set -e
echo "üîç Verifying dependencies..."

if [ ! -d /app/node_modules ]; then
  echo "‚ùå /app/node_modules not found"
  ls -la /app/
  exit 1
fi

mkdir -p /app/apps/api/node_modules

if [ ! -e /app/apps/api/node_modules/dotenv ]; then
  echo "‚ö†Ô∏è  dotenv not found in apps/api/node_modules, searching pnpm store..."
  DOTENV_STORE_PATH=$(find /app/node_modules/.pnpm -maxdepth 3 -type d -path "*/node_modules/dotenv" 2>/dev/null | head -1 || true)
  if [ -n "${DOTENV_STORE_PATH:-}" ]; then
    echo "‚ö†Ô∏è  Creating symlink: /app/apps/api/node_modules/dotenv -> ${DOTENV_STORE_PATH}"
    ln -sf "${DOTENV_STORE_PATH}" /app/apps/api/node_modules/dotenv
  else
    echo "‚ùå dotenv not found in pnpm store"
    find /app/node_modules/.pnpm -type d -maxdepth 3 -name "dotenv*" 2>/dev/null || true
    exit 1
  fi
else
  echo "‚úÖ dotenv already present in apps/api/node_modules"
fi

if [ ! -e /app/node_modules/dotenv ]; then
  DOTENV_TARGET=$(readlink -f /app/apps/api/node_modules/dotenv 2>/dev/null || true)
  if [ -n "${DOTENV_TARGET:-}" ]; then
    echo "‚ö†Ô∏è  Creating symlink: /app/node_modules/dotenv -> ${DOTENV_TARGET}"
    ln -sf "${DOTENV_TARGET}" /app/node_modules/dotenv
  fi
fi

if [ ! -e /app/apps/api/node_modules/dotenv ]; then
  echo "‚ùå dotenv is still missing after attempting to create symlink"
  ls -la /app/apps/api/node_modules/ 2>/dev/null || true
  exit 1
fi

echo "üìÅ apps/api/node_modules snapshot:"
ls -la /app/apps/api/node_modules | head -10

echo "üîç Verifying dotenv can be resolved via NODE_PATH..."
cd /app
NODE_PATH=/app/node_modules:/app/apps/api/node_modules node -e "const path = require.resolve('dotenv'); console.log('‚úÖ dotenv resolved:', path)"
echo "‚úÖ Dependencies verified: dotenv can be resolved"
EOF

# Create non-root user
RUN addgroup -g 1001 -S nodejs
RUN adduser -S nodejs -u 1001

# Ensure storage directories exist and are writable by the non-root user
RUN mkdir -p /app/storage/temp /app/storage/uploads && \
    ln -sfn /app/storage /app/apps/api/storage && \
    chown -R nodejs:nodejs /app/storage

USER nodejs

# Expose port
EXPOSE 3410

# Start production server
CMD ["node", "dist/index.js"]
