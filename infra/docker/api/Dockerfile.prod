# Production Dockerfile for API
FROM node:18-alpine AS base

# Install OpenSSL for Prisma and curl for health checks
RUN apk add --no-cache openssl libc6-compat curl

WORKDIR /app

# Install pnpm and prisma CLI (needed for Prisma client generation)
RUN npm install -g pnpm prisma@6.17.1

# ===========================================
# Dependencies Stage
# ===========================================
FROM base AS dependencies

# Copy workspace configuration files
COPY package.json pnpm-workspace.yaml pnpm-lock.yaml* ./

# Copy all packages (shared dependencies)
COPY packages ./packages
# Copy infra directory (contains database package)
COPY infra ./infra

# Copy API app package.json
COPY apps/api/package.json ./apps/api/

# Install production dependencies only
RUN pnpm install --frozen-lockfile --prod

# Generate Prisma client (needed at runtime)
# Prisma CLI is installed globally in base image
WORKDIR /app
ENV DATABASE_URL="postgresql://postgres:password@postgres:5432/mydb"
RUN cd infra/database && \
    node scripts/merge-schema.js && \
    prisma generate --schema=./prisma/schema.prisma

# ===========================================
# Build Stage
# ===========================================
FROM base AS build

# Copy workspace configuration files
COPY package.json pnpm-workspace.yaml pnpm-lock.yaml* ./

# Copy all packages (including infra/database which is part of workspace)
COPY packages ./packages
COPY infra ./infra

# Copy API app
COPY apps/api ./apps/api

# Install all dependencies (including dev dependencies for build)
RUN pnpm install --frozen-lockfile

# Generate Prisma client
WORKDIR /app
ENV DATABASE_URL="postgresql://postgres:password@postgres:5432/mydb"
# Merge schema files and generate Prisma client using global prisma CLI
RUN cd infra/database && \
    node scripts/merge-schema.js && \
    prisma generate --schema=./prisma/schema.prisma

# Verify Prisma client was generated
RUN test -d node_modules/.pnpm/@prisma+client* && echo "âœ… Prisma client generated" || echo "âš ï¸  Prisma client location check skipped"

# Build API
WORKDIR /app/apps/api
# Verify source files exist before building
RUN echo "ðŸ” Checking source files..." && \
    test -d src && echo "âœ… Source directory exists" || (echo "âŒ Source directory missing" && exit 1) && \
    test -f src/index.ts && echo "âœ… Entry point exists" || (echo "âŒ Entry point missing" && exit 1) && \
    echo "ðŸ“ Source files:" && ls -la src/ | head -10
# Run build - TypeScript should resolve @prisma/client through pnpm workspace
# Clean any previous build artifacts first
RUN rm -rf dist || true
# Use explicit tsc command with error checking - fail on any error
# Write build output to file first, then check exit code
RUN echo "ðŸ”¨ Building TypeScript..." && \
    pnpm build > /tmp/build.log 2>&1 || (cat /tmp/build.log && exit 1) && \
    echo "ðŸ“‹ Build log:" && cat /tmp/build.log && \
    echo "âœ… TypeScript build completed successfully"
# Verify build output was created
RUN echo "ðŸ” Verifying build output..." && \
    test -d dist || (echo "âŒ dist directory not found" && ls -la . && exit 1) && \
    test -f dist/index.js || (echo "âŒ dist/index.js not found" && ls -la dist/ 2>&1 || echo "dist/ does not exist" && exit 1) && \
    echo "âœ… Build output verified:" && ls -la dist/ | head -10

# ===========================================
# Production Stage
# ===========================================
FROM base AS production

# Copy production dependencies (includes generated Prisma client)
COPY --from=dependencies /app/node_modules ./node_modules
COPY --from=dependencies /app/packages ./packages
# Copy infra directory (needed for database package)
COPY --from=dependencies /app/infra ./infra

# Copy built application
COPY --from=build /app/apps/api/dist ./apps/api/dist
COPY --from=build /app/apps/api/package.json ./apps/api/

# Set working directory to API
WORKDIR /app/apps/api

# Create non-root user
RUN addgroup -g 1001 -S nodejs
RUN adduser -S nodejs -u 1001
USER nodejs

# Expose port
EXPOSE 3410

# Start production server
CMD ["node", "dist/index.js"]
