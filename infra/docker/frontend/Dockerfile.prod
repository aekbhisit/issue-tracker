# Production Dockerfile for Frontend
FROM node:18-alpine AS base

# Install curl for health checks
RUN apk add --no-cache curl

WORKDIR /app

# Install pnpm
RUN npm install -g pnpm

# ===========================================
# Dependencies Stage
# ===========================================
FROM base AS dependencies

# Copy workspace configuration files
COPY package.json pnpm-workspace.yaml pnpm-lock.yaml* ./

# Copy all packages (shared dependencies)
COPY packages ./packages

# Copy Frontend app package.json
COPY apps/frontend/package.json ./apps/frontend/

# Install production dependencies only
# Use BuildKit cache mount for pnpm store (speeds up subsequent builds)
RUN --mount=type=cache,target=/root/.local/share/pnpm/store \
    pnpm install --frozen-lockfile --prod

# ===========================================
# Build Stage
# ===========================================
FROM base AS build

# Copy workspace configuration files
COPY package.json pnpm-workspace.yaml pnpm-lock.yaml* ./

# Copy all packages
COPY packages ./packages

# Copy Frontend app
COPY apps/frontend ./apps/frontend

# Install all dependencies (including dev dependencies for build)
# Use BuildKit cache mount for pnpm store (speeds up subsequent builds)
RUN --mount=type=cache,target=/root/.local/share/pnpm/store \
    pnpm install --frozen-lockfile

# Build shared workspace packages needed by Frontend (CommonJS dist for Node/Next resolution)
# Use subshells to isolate directory changes and ensure we're back at /app after each build
WORKDIR /app
RUN echo "ðŸ”¨ Building workspace packages..." && \
    (cd /app/packages/types && \
     echo "ðŸ“ Building @workspace/types from $(pwd)..." && \
     npx tsc --project tsconfig.json && \
     echo "ðŸ“ Types build complete, checking dist:" && \
     test -d dist && ls -la dist/ | head -5 || (echo "âŒ dist not found in packages/types" && ls -la . && exit 1)) && \
    (cd /app/packages/utils && \
     echo "ðŸ“ Building @workspace/utils from $(pwd)..." && \
     npx tsc --project tsconfig.json && \
     echo "ðŸ“ Utils build complete, checking dist:" && \
     test -d dist && ls -la dist/ | head -5 || (echo "âŒ dist not found in packages/utils" && ls -la . && exit 1)) && \
    echo "âœ… Workspace packages built" && \
    echo "ðŸ“ Verifying dist folders from /app..." && \
    test -d /app/packages/types/dist || (echo "âŒ /app/packages/types/dist not found" && find /app -name "dist" -type d 2>/dev/null | head -10 && exit 1) && \
    test -d /app/packages/utils/dist || (echo "âŒ /app/packages/utils/dist not found" && find /app -name "dist" -type d 2>/dev/null | head -10 && exit 1) && \
    echo "âœ… Dist folders verified: packages/types/dist and packages/utils/dist exist"

# Build Frontend
WORKDIR /app/apps/frontend
# Ensure public directory exists (Next.js may not create it)
RUN mkdir -p public || true
# Create storage directory (symlink won't work in Docker, create empty dir instead)
RUN rm -f storage 2>/dev/null || true && mkdir -p storage || true
# Use BuildKit cache mount for Next.js build cache (speeds up subsequent builds)
RUN --mount=type=cache,target=/app/apps/frontend/.next/cache \
    pnpm build

# ===========================================
# Production Stage
# ===========================================
FROM base AS production

# Copy production dependencies (use build stage to ensure Next.js is available)
# Build stage has all dependencies including Next.js
COPY --from=build /app/node_modules ./node_modules
COPY --from=dependencies /app/packages ./packages

# Copy compiled workspace package dist folders (needed at runtime for Next.js to resolve workspace packages)
COPY --from=build /app/packages/types/dist ./packages/types/dist
COPY --from=build /app/packages/utils/dist ./packages/utils/dist

# Copy built application to correct location
COPY --from=build /app/apps/frontend/.next ./apps/frontend/.next
# Copy public directory (created in build stage if it didn't exist)
COPY --from=build /app/apps/frontend/public ./apps/frontend/public
COPY --from=build /app/apps/frontend/package.json ./apps/frontend/

# Set working directory to Frontend
WORKDIR /app/apps/frontend

# Create non-root user
RUN addgroup -g 1001 -S nodejs
RUN adduser -S nodejs -u 1001
USER nodejs

# Expose port
EXPOSE 3412

# Start production server
# Use npx to find next binary (works with pnpm workspace hoisting)
CMD ["sh", "-c", "npx next start -p ${PORT:-3412}"]
